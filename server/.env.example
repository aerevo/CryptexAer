# ============================================
# CryptexLock Mirror Server Configuration
# ============================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security Secrets
# CRITICAL: Generate new secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_generate_new_one
HMAC_SECRET=your_hmac_secret_for_token_signing_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Biometric Thresholds
MIN_ENTROPY=0.5
MIN_TREMOR_HZ=7.5
MAX_TREMOR_HZ=13.5
MIN_INTERACTION_TIME_MS=1500
MIN_CONFIDENCE_SCORE=0.85

# Redis Configuration (optional - for distributed rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Logging
LOG_LEVEL=info
LOG_REQUESTS=true

# CORS Settings
CORS_ORIGIN=https://yourdomain.com
CORS_ENABLED=true

# Device Registration (optional)
REQUIRE_DEVICE_REGISTRATION=false
DEVICE_WHITELIST_ENABLED=false

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
