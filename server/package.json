{
  "name": "cryptexlock-mirror-server",
  "version": "3.0.0",
  "description": "CryptexLock Server-Side Validation API with Incident Reporting",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "audit": "./scripts/audit-dependencies.sh",
    "audit:fix": "npm audit fix",
    "audit:report": "npm audit --json > audit-report.json && cat audit-report.json",
    "update:check": "npm outdated",
    "update:minor": "npm update",
    "update:major": "npx npm-check-updates -u",
    "logs:view": "tail -f logs/incidents.log",
    "logs:threats": "tail -f logs/threats.log",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "security",
    "biometric",
    "authentication",
    "anti-bot",
    "threat-intelligence",
    "incident-reporting"
  ],
  "author": "Captain Aer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "joi": "^17.13.0",
    "redis": "^4.6.13",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cryptexlock-server"
  }
}
